# Core security
JWT_SECRET=replace-with-at-least-32-characters

# Auth mode
# disabled: no login screen, API trusts protected network boundary.
# token:    enable Bearer/JWT auth checks.
PIXFLOW_AUTH_MODE=disabled
VITE_PIXFLOW_DISABLE_LOGIN=1
# Optional when frontend and API are on different origins
# VITE_API_BASE_URL=https://api.example.com
# Optional local web API port (used by dev:web and vite proxy)
PIXFLOW_WEB_API_PORT=3002

# Optional bootstrap admin (recommended for first run)
PIXFLOW_BOOTSTRAP_ADMIN_ON_STARTUP=true
PIXFLOW_BOOTSTRAP_ADMIN_EMAIL=admin@pixflow.local
PIXFLOW_BOOTSTRAP_ADMIN_PASSWORD=ChangeMe123456
PIXFLOW_BOOTSTRAP_ADMIN_NAME=Pixflow Admin

# AI providers
OPENAI_API_KEY=
FAL_API_KEY=
HEDRA_API_KEY=
KLING_API_KEY=
ELEVENLABS_API_KEY=

# Dev-only auth shortcuts (never enable in production)
PIXFLOW_AUTH_BYPASS=0
PIXFLOW_AUTH_BYPASS_EMAIL=local@pixflow.internal
PIXFLOW_AUTH_BYPASS_NAME=Local User
PIXFLOW_AUTH_BYPASS_PASSWORD=pixflow-local-bypass
VITE_PIXFLOW_DEV_AUTH_BYPASS=0
VITE_PIXFLOW_DEV_AUTO_LOGIN=0
VITE_PIXFLOW_DEV_AUTO_LOGIN_EMAIL=dev@pixery.ai
VITE_PIXFLOW_DEV_AUTO_LOGIN_PASSWORD=dev123pixery!
VITE_PIXFLOW_FRONTEND_TELEMETRY_ENABLED=1

# Frontend perf gate (release pipeline budgets)
PIXFLOW_FRONTEND_REQUIRE_EVENTS=1
PIXFLOW_FRONTEND_TAB_SWITCH_P95_MS=5000
PIXFLOW_FRONTEND_PAGE_RENDER_P95_MS=6000
PIXFLOW_FRONTEND_TAB_SWITCH_MIN_SAMPLES=3
PIXFLOW_FRONTEND_PAGE_RENDER_MIN_SAMPLES=3

# Regression gate calibration (leave PIXFLOW_REGRESSION_MODE empty for auto mode)
# Auto mode: warn until baseline is mature, then block.
# PIXFLOW_REGRESSION_MODE=warn
PIXFLOW_REGRESSION_MAX_SUCCESS_DROP=0.0100
PIXFLOW_REGRESSION_MAX_P95_INCREASE_MS=5000
PIXFLOW_REGRESSION_MAX_PROVIDER_FAILRATE_INCREASE=0.0500
PIXFLOW_REGRESSION_MAX_PIPELINE_SUCCESS_DROP=0.0100
PIXFLOW_REGRESSION_MAX_PIPELINE_P95_INCREASE_MS=5000
PIXFLOW_REGRESSION_MAX_PIPELINE_FAILRATE_INCREASE=0.0500
PIXFLOW_REGRESSION_MAX_FRONTEND_SUCCESS_DROP=0.0100
PIXFLOW_REGRESSION_MAX_FRONTEND_P95_INCREASE_MS=5000
PIXFLOW_REGRESSION_MAX_FRONTEND_FAILRATE_INCREASE=0.0500
PIXFLOW_REGRESSION_PIPELINE_MIN_SAMPLES=3

# yt-dlp runtime tuning
# PIXFLOW_YTDLP_BIN=/absolute/path/to/yt-dlp
# PIXFLOW_YTDLP_COOKIES_FROM_BROWSER=chrome
# PIXFLOW_YTDLP_DISABLE_COOKIE_RETRY=0
